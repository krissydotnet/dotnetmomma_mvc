@model IList<DotNetMommaShared.Models.Post>
<div class="blog-sidebar">
    <h3>Latest Posts</h3>

    @if (Model.Count > 0)
    {
        <ul>
            @foreach (var post in Model)
            {
                <li><i class="fas fa-code"></i>@Html.PostLink(post)</li>
            }
        </ul>
    }
    else
    {
        <p>No posts found!</p>
    }
</div>
