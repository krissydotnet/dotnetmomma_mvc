@model DotNetMommaShared.Models.Post

@{
    ViewBag.Title = Model.Title;
}

<div id="content">
    <div class="post">
        <div class="post-meta">
            <div class="row">

                <div class="post-title">
                    <h1>@Html.PostLink(Model)</h1>
                </div>

            </div>
            <div class="row">

                <div class="post-category">
                    <span>Category:</span> @Html.CategoryLink(Model.PostCategory)
                </div>

                <div class="post-tags">
                    <span>Tags:</span>                 
                    @foreach (var tag in Model.Tags)
                    {
                        <div class="tags-div">
                            @Html.TagLink(tag.Tag)
                        </div>
                    }
                </div>

                <div class="posted-date">
                    @Model.PostedOn.ToConfigLocalTime()
                </div>

            </div>
        </div>

        <div class="post-body">
            @Html.Raw(Model.Description)
        </div>

    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
