@model IList<DotNetMommaShared.Models.PostCategory>

<div class="blog-sidebar">
    <h3>Categories</h3>
    @if (Model.Count > 0)
    {
        <ul>
            @foreach (var category in Model)
            {
                <li><i class="fas fa-code"></i>@Html.CategoryLink(category)</li>
            }
        </ul>
    }
    else
    {
        <p>No categories found!</p>
    }
</div>